<div class="page-header">
  <h1>Pending Bets</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Current Bidder</th>
    <th>Bid Amount</th>
    <th>Bids Count</th>
    <th>Current Bid</th>
    <th>Potential Payout</th>
    <th>Bet Multiplier</th>
    <th>Final Odds</th>
    <th>Actions</th>
  </tr>
  <tbody>
  <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.name %></td>
        <td><%= bet.last_bidder.try(:username) %></td>
        <td><%= number_to_currency bet.bid_amount %></td>
        <td><%= bet.bids.count %></td>
        <td><%= number_to_currency bet.current_bid_price %></td>
        <td><%= number_to_currency bet.potential_payout %></td>
        <td><%= bet.odd_inflation %></td>
        <td><%= bet.final_odds %></td>
        <td><%= link_to_with_icon "icon-ok", "Bid", bid_bet_path(bet), :class => "btn btn-small btn-primary", :method => :put, :confirm => "Are you sure?" %></td>
      </tr>
  <% end %>
  </tbody>
  </thead>
</table>
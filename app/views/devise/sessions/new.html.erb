<div class="page-header">
  <h1>Sign in</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

    <div class="control-group">
      <%= f.label :Login, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :login, :placeholder => "Username or Email", :class => "text_field input-xxlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password, :placeholder => "Password", :class => "text_field input-xxlarge" %>
      </div>
    </div>


    <% if devise_mapping.rememberable? -%>
        <div class="control-group">

          <div class="controls">
            <label class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %></label>
          </div>
        </div>
    <% end -%>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Sign in", :class => "btn btn-primary" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= render "devise/shared/links" %>
      </div>
    </div>

<% end %>

